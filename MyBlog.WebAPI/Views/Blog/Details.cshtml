@model BlogViewModel


<body>


    <div class="doc-container" id="doc-container">
        <div class="container-fixed">
            <div class="col-content" style="width:100%">
                <div class="inner">
                    <article class="article-list">
                        <input type="hidden" value="@*@Model.BlogTypeID*@" id="blogtypeid" />
                        <section class="article-item">
                            <aside class="title" style="line-height:1.5;">
                                <h4>@Model.Title</h4>
                                <p class="fc-grey fs-14" >
                                    <div>
                                    <small>
                                        作者：<a href="/Personal/Index?Id=@(Model.WriterInfo.Id)" target="_blank" class="fc-link">@(Model.WriterInfo==null?null:Model.WriterInfo.WriterName)</a>
                                    </small>
                                    <small>
                                       <button id="follow_btn" class="layui-btn layui-btn-radius layui-btn-sm layui-btn-warm" >关注</button>
                                    </small>
                                    </div>
                                    @* <button id="follow_btn" class="layui-btn" title="关注" ></button> *@
                                    <small class="ml10">浏览数：<i class="readcount">@Model.BrowseCount</i></small>
                                    <small class="ml10">发布于： <label>@Model.CreationTime.ToString()</label> </small>
                                </p>
                            </aside>
                            <div class="time mt10" style="padding-bottom:0;">
                                <span class="day">@Model.CreationTime.Day</span>
                                <span class="month fs-18">@Model.CreationTime.Month<small class="fs-14">月</small></span>
                                <span class="year fs-18">@Model.CreationTime.Year</span>
                            </div>
                            <div class="content artiledetail" style="border-bottom: 1px solid #e1e2e0; padding-bottom: 20px;">
                                  <div id="content-html"  >
                                     @Html.Raw(Model.ContentHtml)
                                  </div>
                                <div class="copyright mt20">
                                    <p class="f-toe fc-black">
                                        非特殊说明，本文版权归 @(Model.WriterInfo == null ? null : Model.WriterInfo.WriterName) 所有，转载请注明出处.
                                    </p>
                                    <p class="f-toe">
                                        本文标题：
                                        <a href="javascript:void(0)" class="r-title">@Model.Title</a>
                                    </p>
                                    <p class="f-toe">
                                        本文网址：
                                        <a href="@Model.Url">暂无</a>
                                    </p>
                                </div>
                                <div id="aplayer" style="margin:5px 0"></div>
                                <h6>延伸阅读</h6>
                                <ol class="b-relation"></ol>
                            </div>
                            <div class=" share" data-tag="">
                                <ul>
                                    <li ><i id="like_btn" class="fa fa-thumbs-o-up"></i></li>
                                    <li><i id="favorite_btn" class="fa fa-heart-o"></i></li>
                                    <li><i id="qq_btn" class="fa fa-qq"></i></li>
                                    <li><i id="wechat_btn" class="fa fa-wechat"></i></li>

                                </ul>
                            </div>
                            <div class="f-cb"></div>
                            <div class="mt20 f-fwn fs-24 fc-grey comment" style="border-top: 1px solid #e1e2e0; padding-top: 20px;">
                            </div>

                        </section>
                    </article>
                </div>
            </div>
            <div class="container-inner">
                <section class="msg-remark">
                    <h1>留言板</h1>
                    <p>
                        沟通交流，拉近你我！
                    </p>
                </section>
                <div class="textarea-wrap message" id="textarea-wrap">
                    <form id="create_comment_form" class="layui-form">
                        <div class="form-group" style="text-align:center;">
                            <label class="layui-form-label" style="font-weight:600;font-size:20px">评论</label>
                            <textarea name="Content" class="form-control"  rows="3"></textarea>
                        </div>
                        <input type="hidden" name="BlogId" value="@Model.Id">
                        <div class="layui-form-item">
                            <button type="button" class="layui-btn"  onclick="comment()" >提交留言</button>
                        </div>
                    </form>

                </div>
            </div>
            <div class="f-cb"></div>
            <div class="mt20">
                <ul class="message-list" id="message-list">

                    @foreach(var comment in Model.Comments){
                    <li class="zoomIn article" id="comment_@comment.Id">
                        <div class="comment-parent">
                            <a name="remark-1"></a>
                                <img src="@(comment.UserInfo==null?null:comment.UserInfo.MainPagePhoto.Url)" />
                            <div class="info">
                                    <span class="username">@(comment.UserInfo==null?"该用户已注销":comment.UserInfo.Name)</span>
                            </div>
                            <div class="comment-content">
                                @comment.Content
                            </div>
                            <p class="info info-footer">
                                <i class="fa fa-map-marker" aria-hidden="true"></i>

                                <span class="comment-time">@comment.Time</span>
                                    <a href="javascript:;" id="reply_@comment.Id" class="btn-reply" data-targetid="1" data-targetname="@(comment.UserInfo==null?"该用户已注销":comment.UserInfo.Name)">回复</a>
                            </p>
                        </div>
                        <hr />
                        @foreach(var subcomment in comment.Comments){
                            <div class="comment-child">
                                <a name="reply-1"></a>
                                    <img src="@(subcomment.UserInfo==null?null:subcomment.UserInfo.MainPagePhoto.Url)">
                                <div class="info">
                                        <span class="username">@(subcomment.UserInfo==null?"该用户已注销":subcomment.UserInfo.Name)</span>
                                        <span class="username">@(comment.UserInfo==null?"该用户已注销":comment.UserInfo.Name)</span>
                                    <span>@subcomment.Content</span>
                                </div>
                                <p class="info">
                                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                                    <span class="comment-time">@subcomment.Time</span>
                                </p>
                            </div>

                        }
                       
                        <div class="replycontainer layui-hide" id="comment_reply_box_@(comment.Id)">
                            <form class="layui-form" id="comment_reply_form_@(comment.Id)">
                                <div class="layui-form-item">
                                    <textarea name="Content" lay-verify="replyContent" placeholder="请输入回复内容" class="layui-textarea" style="min-height:80px;"></textarea>
                                </div>
                                    <input type="hidden" name="TargetName" value="@(comment.UserInfo==null?"该用户已注销":comment.UserInfo.Name)">
                                <input type="hidden" name="BlogId" value="@comment.BlogId">
                                <input type="hidden" name="FatherId" value="@comment.Id">
                                <div class="layui-form-item">
                                    <button type="button" class="layui-btn layui-btn-xs" onclick="comment_reply(@comment.Id)">提交</button>
                                </div>
                            </form>
                        </div>
                    </li>




                    }






                </ul>
            </div>


        </div>
    </div>




    <footer class="grid-footer">
        <div class="footer-fixed">
            <div class="copyright">
                <div class="info">
                    <div class="contact">
                        <a href="javascript:void(0)" class="github" target="_blank"><i class="fa fa-github"></i></a>
                        <a href="#" class="qq" target="_blank" ><i class="fa fa-qq"></i></a>
                        <a href="#" class="email" target="_blank" ><i class="fa fa-envelope"></i></a>
                        <a href="javascript:void(0)" class="weixin"><i class="fa fa-weixin"></i></a>
                    </div>
                    <p class="mt05">
                       Copyright &copy; 2019-2020 ZQ博客 All Rights Reserved V.3.1.3 Power by ZQ博客
                    </p>
                </div>
            </div>
        </div>
    </footer>




     @section Scripts{

         <script>
            

            function comment() {


                
                var formData = new FormData(document.getElementById('create_comment_form'));

                $.ajax({
                    type: "POST",
                    processData: false,//这个必须有，不然会报错
                    contentType: false,//这个必须有，不然会报错
                    headers: {
                        'Authorization': localStorage.getItem("JWTtoken")
                    },
                    url: "/api/Comment/Create",
                    data: formData,
                    success: function (result) {
                        console.log(result);
                        if (result.statusCode == 200) {
                            alert("comment成功!");
                            var data=result.data;
                            var comment=`
                            <li class="zoomIn article"> 
                                <div class="comment-parent">
                                    <a name="remark-1"></a>
                                    <img src="${data.userInfo.mainPagePhoto.url}" />
                                    <div class="info">
                                        <span class="username">${data.userInfo.name}</span>
                                    </div>
                                    <div class="comment-content">
                                        ${data.content}
                                    </div>
                                    <p class="info info-footer">
                                        <i class="fa fa-map-marker" aria-hidden="true"></i>
                                        <span class="comment-time">${data.time}</span>
                                        <a href="javascript:;" id="reply_${data.id}" class="btn-reply" data-targetid="1" data-targetname="${data.userInfo.name}">回复</a>
                                    </p>
                                </div>

                                <hr />
                                <div class="replycontainer layui-hide" id="comment_reply_box_${data.id}">
                                    <form class="layui-form" id="comment_reply_form_${data.id}">
                                        <div class="layui-form-item">
                                            <textarea name="Content" lay-verify="replyContent" placeholder="请输入回复内容" class="layui-textarea" style="min-height:80px;"></textarea>
                                        </div>
                                        <input type="hidden" name="FatherId" value="${data.id}">
                                        <input type="hidden" name="BlogId" value="${data.blogId}">
                                        <input type="hidden" name="TargetName" value="${data.userInfo.name}">
                                        <div class="layui-form-item">
                                            <button type="button" class="layui-btn layui-btn-xs" onclick="comment_reply(${data.id})">提交</button>
                                        </div>
                                    </form>
                                </div>
                            </li>`


                            $("#message-list").prepend(comment)

                            $("textarea").val("");


                            





                        } else {

                            alert(result.message);
                        }
                    },
                    error: function () {
                        alert("什么鬼！");
                    }


                });




            }

            function comment_reply(id_num){   
                var id=id_num;
                var form_id="comment_reply_form_"+id;
                alert(form_id);

                var formData = new FormData(document.getElementById(form_id));

                $.ajax({
                    type: "POST",
                    processData: false,//这个必须有，不然会报错
                    contentType: false,//这个必须有，不然会报错
                    headers: {
                        'Authorization': localStorage.getItem("JWTtoken")
                    },
                    url: "/api/Comment/CreateReply",
                    data: formData,
                    success: function (result) {
                        console.log(result);
                        if (result.statusCode == 200) {
                            alert("comment回复成功!");
                            var data=result.data;
                            var comment=`
                            <div class="comment-child">
                                <a name="reply-1"></a>
                                <img src="${data.userInfo.mainPagePhoto.url}">
                                <div class="info">
                                    <span class="username">${data.userInfo.name}</span>
                                    <span id="reply_${data.id}" style="padding-right:0;margin-left:-5px;">回复</span>
                                    <span class="username">${data.targetName}</span>
                                    <span>${data.content}</span>
                                </div>
                                <p class="info">
                                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                                    <span class="comment-time">${data.time}</span>
                                </p>
                            </div>
                            
                            `


                            $("#comment_reply_box_"+id).before(comment)

                            $("textarea").val("");
                            $("#reply_"+id).html("回复");
                            $("#comment_reply_box_"+id).addClass("layui-hide");


                        } else {

                            alert(result.message);
                        }
                    },
                    error: function () {
                        alert("什么鬼！");
                    }


                });



            }

            $(function(){
                var userInfo=null;
                var is_login = getCookie("is_login");

                if (is_login == "true") {


                    $.ajax({
                        url: "/api/UserInfo/GetUserInfo",
                        type: 'GET',
                        async:false,
                        headers: {
                            'Authorization': localStorage.getItem("JWTtoken")
                        },
                        success: function (res) {
                            userInfo=res.data;
                        },
                        error: function (res) {
                            alert("Layout获取用户数据失败！");
                        }




                    });
                
                    var blogId=@(Model.Id);
                    var writerId=@(Model.WriterInfo==null?0:Model.WriterInfo.Id)
                    var concerns=userInfo.concerns;
                    var favorites=userInfo.favorites;
                    var likes=userInfo.likes;
                    var concerned=false;
                    var favorited=false;
                    var liked=false;
                    for(var i=0;i<concerns.length;i++){
                        if(concerns[i].id==writerId){
                            concerned=true;
                            break;
                        }
                    }
                    for(var i=0;i<favorites.length;i++){
                        if(favorites[i].id==blogId){
                            favorited=true;
                            break;
                        }
                    }
                    for(var i=0;i<likes.length;i++){
                        if(likes[i].id==blogId){
                            liked=true;
                            break;
                        }
                    }


                    if(concerned){
                        $("#follow_btn").toggleClass('layui-btn-primary');
                        $("#follow_btn").toggleClass('layui-btn-warm');
                        $("#follow_btn").html("已关注");
                    }
                    if(favorited){
                        $("#favorite_btn").toggleClass('fa-heart-o');
                        $("#favorite_btn").toggleClass('fa-heart');
                    }
                    if(liked){
                        $("#like_btn").toggleClass('fa-thumbs-o-up');
                        $("#like_btn").toggleClass('fa-thumbs-up');
                    }
                } 

            })

            $(".fa.fa-thumbs-o-up").click(function () {
                
                if($(this).is('.fa-thumbs-o-up')){
                    like();
                }

                if($(this).is('.fa-thumbs-up')){
                    unlike();
                }
                @* $(this).toggleClass('fa-thumbs-o-up');
                $(this).toggleClass('fa-thumbs-up'); *@
            })

            $(".fa.fa-heart-o").click(function () {
                if($(this).is('.fa-heart-o')){
                    favorite();

                }
                if($(this).is('.fa-heart')){
                    unfavorite();

                }
                @* $(this).toggleClass('fa-heart-o');
                $(this).toggleClass('fa-heart'); *@
            })


            $("#follow_btn").click(function(){
                if($(this).is('.layui-btn-primary')){
                    unfollow();
                }
                if($(this).is('.layui-btn-warm')){
                    follow();
                }
                @* $(this).toggleClass('layui-btn-primary');
                $(this).toggleClass('layui-btn-warm'); *@


            })



            function like(){
               var is_login = getCookie("is_login");

                if (is_login == "true") {
                    $.ajax({
                        type: "POST",
                        processData: false,//这个必须有，不然会报错
                        contentType: false,//这个必须有，不然会报错
                        headers: {
                            'Authorization': localStorage.getItem("JWTtoken")
                        },
                        url:"/api/UserInfo/Like?BlogId=@(Model.Id)",
                        success: function(result){
                            console.log(result);
                            if(result.statusCode==200){ 
                                $("#like_btn").toggleClass('fa-thumbs-o-up');
                                $("#like_btn").toggleClass('fa-thumbs-up');
                            }else{

                                alert(result.message);
                            }
                        },
                        error:function(){
                            alert("点赞失败！");
                        }

                        
                    });
                }else{
                    alert("请先登录");
                    login_register_click();

                }
                
            }


            function unlike(){
               var is_login = getCookie("is_login");

                if (is_login == "true") {
                    $.ajax({
                        type: "DELETE",
                        processData: false,//这个必须有，不然会报错
                        contentType: false,//这个必须有，不然会报错
                        headers: {
                            'Authorization': localStorage.getItem("JWTtoken")
                        },
                        url:"/api/UserInfo/Unlike?BlogId=@(Model.Id)",
                        success: function(result){
                            console.log(result);
                            if(result.statusCode==200){ 
                                $("#like_btn").toggleClass('fa-thumbs-o-up');
                                $("#like_btn").toggleClass('fa-thumbs-up');
                            }else{

                                alert(result.message);
                            }
                        },
                        error:function(){
                            alert("取消收藏失败！");
                        }

                        
                    });
                }else{
                    alert("请先登录");
                    login_register_click();

                }

            }

            function favorite(){
                var is_login = getCookie("is_login");

                if (is_login == "true") {
                    $.ajax({
                        type: "POST",
                        processData: false,//这个必须有，不然会报错
                        contentType: false,//这个必须有，不然会报错
                        headers: {
                            'Authorization': localStorage.getItem("JWTtoken")
                        },
                        url:"/api/UserInfo/Favorite?BlogId=@(Model.Id)",
                        success: function(result){
                            console.log(result);
                            if(result.statusCode==200){ 
                                $("#favorite_btn").toggleClass('fa-heart-o');
                                $("#favorite_btn").toggleClass('fa-heart');
                            }else{

                                alert(result.message);
                            }
                        },
                        error:function(){
                            alert("收藏失败！");
                        }

                        
                    });
                }else{
                    alert("请先登录");
                    login_register_click();

                }

            }

            function unfavorite(){
               var is_login = getCookie("is_login");

                if (is_login == "true") {
                    $.ajax({
                        type: "DELETE",
                        processData: false,//这个必须有，不然会报错
                        contentType: false,//这个必须有，不然会报错
                        headers: {
                            'Authorization': localStorage.getItem("JWTtoken")
                        },
                        url:"/api/UserInfo/Unfavorite?BlogId=@(Model.Id)",
                        success: function(result){
                            console.log(result);
                            if(result.statusCode==200){ 
                                $("#favorite_btn").toggleClass('fa-heart-o');
                                $("#favorite_btn").toggleClass('fa-heart');
                            }else{

                                alert(result.message);
                            }
                        },
                        error:function(){
                            alert("取消收藏失败！");
                        }

                        
                    });
                }else{
                    alert("请先登录");
                    login_register_click();

                }

            }

            function follow(){
                @if(Model.WriterInfo==null){
                    Html.Raw("alert('该作者不存在');");
                    Html.Raw("return;");
                }
                var writerId=@Model.WriterInfo.Id;


                var is_login = getCookie("is_login");

                if (is_login == "true") {
                    $.ajax({
                        type: "POST",
                        processData: false,//这个必须有，不然会报错
                        contentType: false,//这个必须有，不然会报错
                        headers: {
                            'Authorization': localStorage.getItem("JWTtoken")
                        },
                        url:"/api/UserInfo/Follow?WriterId=@(Model.WriterInfo!.Id)",
                        success: function(result){
                            console.log(result);
                            if(result.statusCode==200){ 
                                $("#follow_btn").toggleClass('layui-btn-primary');
                                $("#follow_btn").toggleClass('layui-btn-warm');
                                $("#follow_btn").html("已关注");

                            }else{

                                alert(result.message);
                            }
                        },
                        error:function(){
                            alert("关注失败！");
                        }

                        
                    });
                }else{
                    alert("请先登录");
                    login_register_click();

                }
            }

            function unfollow(){


               var is_login = getCookie("is_login");
                @if(Model.WriterInfo==null){
                    Html.Raw("alert('该作者不存在');");
                    Html.Raw("alert('return;');");
                }
                if (is_login == "true") {
                    $.ajax({
                        type: "DELETE",
                        processData: false,//这个必须有，不然会报错
                        contentType: false,//这个必须有，不然会报错
                        headers: {
                            'Authorization': localStorage.getItem("JWTtoken")
                        },
                        url:"/api/UserInfo/Unfollow?WriterId=@(Model.WriterInfo!.Id)",
                        success: function(result){
                            console.log(result);
                            if(result.statusCode==200){ 
                                $("#follow_btn").toggleClass('layui-btn-primary');
                                $("#follow_btn").toggleClass('layui-btn-warm');
                                $("#follow_btn").html("关注");
                            }else{

                                alert(result.message);
                            }
                        },
                        error:function(){
                            alert("取消关注失败！");
                        }

                        
                    });
                }else{
                    alert("请先登录");
                    login_register_click();

                }

            }


            function getCookie(name) {
                var str = document.cookie;
                var arr = str.split("; ");
                for (var i = 0; i < arr.length; i++) {
                    var arr1 = arr[i].split("=");
                    if (arr1[0] == name) {
                        return arr1[1];
                    }
                }
                return null;
            }


            function login_register_click() {
                layer.open({
                    type: 2,
                    title: '登录/注册',
                    area: ['450px', '500px'],
                    fixed: false, //不固定
                    maxmin: true,
                    content: '/Home/Login'
                });


            }

         </script>

     }



